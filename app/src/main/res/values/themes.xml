<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiabetrometroV01" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00B0FF</item>
        <item name="colorPrimaryVariant">#0088FF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00AF9E</item>
        <item name="colorSecondaryVariant">#006564</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.DiabetrometroV01.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DiabetrometroV01.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.DiabetrometroV01.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>